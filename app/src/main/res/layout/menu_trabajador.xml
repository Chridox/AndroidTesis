<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    android:padding="5dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="731dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/MensajeInicioMenuTrabajador"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="200px"
                android:text=""
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="25dp"></TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="100px"
                android:background="@drawable/logoaguacoop"

                android:foregroundGravity="center"
                ></ImageView>


            <Button
                android:id="@+id/tareasTrabajador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="300px"
                android:drawableLeft="@drawable/listadeverificacion"
                android:text="Tareas Diarias"
                android:textSize="15sp"
                android:textStyle="bold">

            </Button>

            <Button
                android:id="@+id/cerrarSesionTrabajador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="100px"
                android:drawableLeft="@drawable/salida"
                android:text="Cerrar Sesion"
                android:textSize="15sp"
                android:textStyle="bold">

            </Button>

        </LinearLayout>
    </ScrollView>



</LinearLayout>